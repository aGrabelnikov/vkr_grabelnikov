<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2E2E2">


    <LinearLayout
        android:background="@drawable/fon_for_ads_full"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout

            android:layout_gravity="center"
            android:id="@+id/frameLayout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:src="@drawable/cat"/>
            <FrameLayout
                android:layout_gravity="top|center"
                android:layout_width="44dp"
                android:layout_height="4dp"
                android:layout_marginTop="16dp"
                android:background="#999899" />
        </FrameLayout>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="-30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fon_for_ads_full">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/fon_for_ads_full">
        <LinearLayout
            android:background="@drawable/fon_for_ads_full"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textSize="32dp"
            android:id="@+id/name_anim"
            android:textColor="@color/black"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="София"/>
        <ImageView
            android:id="@+id/pol_anim"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:layout_width="20dp"
            android:layout_height="27dp"
            android:src="@drawable/pol_girl"
            android:layout_gravity="center"/>
    </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="24dp"
                    android:src="@drawable/location"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/location_propazhi"
                    android:textSize="17dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ул. Костычева д.15, г. Брянск"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="20dp"
                    android:src="@drawable/date_image"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/date_propazhi"
                    android:layout_gravity="center"
                    android:textSize="17dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="15:20 | 23 мая 2023 г."/>
            </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>